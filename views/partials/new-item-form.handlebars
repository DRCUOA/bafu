{{!-- modal form to pop up on unregonised item scan, used to enter new details --}}
<div class="modal-content">
  <form id="enter-new-details-form" method="post" action="/items/create-new">
    <span class="close" id="close-new-details-form">&times;</span>
    <img src="/assets/logo-nb-nt-smiley-200.webp" alt="logo"
    style="height: 40px; width: 40px; margin: -9px -10px -1px 0px;">
    <br>
    <label for="barcode">Barcode:</label>
    <input type="text" name="barcode" id="barcode" required>
    <br>
    <label for="name">Name:</label>
    <input type="text" name="name" id="name" required>
    <br>
    <label for="description">Description:</label>
    <input type="text" name="description" id="description" required>
    <br>
    <label for="cost">Cost:</label>
    <input type="number" name="cost" id="cost" required>
    <br>

    <label for="UOM">Unit of Measure:</label>
    <input type="text" name="UOM" id="UOM" required>
    <br>

    <label for="qty">Qty:</label>
    <input type="number" name="qty" id="qty" required>
    <br>

    <button type="submit">Submit</button>
  </form>
</div>