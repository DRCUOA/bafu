<!-- login -->

<form method="post" action="/login">
  <span class="close" id="close-log-in">&times;</span>
  <img src="/assets/logo-nb-nt-smiley-200.webp" alt="logo"
    style="height: 40px; width: 40px; margin: -9px -10px -1px 0px;">
  <br>
  <label for="username">Username:</label>
  <input type="text" name="username" required>
  <br>
  <label for="password">Password:</label>
  <input type="password" name="password" required>
  <br>
  <button type="submit">Log In</button>
  <p id="reset-pwd-btn">
    Trouble Logging In?
  </p>
</form>

<!-- password reset start process modal-->
<div id="password-reset-modal" class="modal">
  <div class="modal-content">
    <span class="close" id="close-password-reset">&times;</span>
    <img src="/assets/logo-nb-nt-smiley-200.webp" alt="logo"
      style="height: 40px; width: 40px; margin: -9px -10px -1px 0px;">
    <p>Please enter your email address to receive a password reset link:</p>
    <form id="password-reset-form" method="post" action="/api/resetpassword">
      <label for="email2">Email address:</label>
      <input type="email" name="email2" id="email2" required>
      <p id="email-status"></p>
      <button type="submit" id="password-reset-button">Send Reset Email</button>
    </form>
  </div>
</div>

<!-- password reset confirmation modal-->
<div class="modal" id="password-reset-confirmation-modal">
  <div class="modal-content">
    <h3>Confirm Password Reset</h3>
    <form id="reset-password-confirmation-form">
      <input type="hidden" id="email3" name="email3" value="{{email2}}">
      <input type="hidden" id="resetToken" name="resetToken" value="{{resetToken}}">
      <label for="newPassword">New Password:</label>
      <input type="password" id="newPassword" name="newPassword" required>
      <label for="confirmNewPassword">Confirm New Password:</label>
      <input type="password" id="confirmNewPassword" name="confirmNewPassword" required>
      <button id="reset-password-confirmation-submit" type="submit" >Submit</button>
    </form>
  </div>
</div>