<!-- index view -->
<section id="index-container">
  <section class="main">
    {{!-- display a toast message if one provided --}}
    {{#if toastMessage}}
    <div class="btn-container">
      <img src="/assets/logo.webp" alt="logo"></img>
      <p class="toast" id="index-toast">{{toastMessage}}</p>
      <button id="register-button">Register</button>
      <button id="sign-in-button">Sign In</button>
    </div>
  </section>
  {{else}}
  <div class="btn-container">
    <img src="/assets/logo.webp" alt="logo"></img>
    <h1>Welcome to Showpan</h1>
    <button id="register-button">Register</button>
    <button id="sign-in-button">Sign In</button>
    <p id="reset-pwd-btn">Trouble Logging In?</p>
  </div>
</section>
{{/if}}
{{!-- Modals --}}
<!-- Modal HTML for the register form -->
<div id="register-modal" class="modal">
  <div class="modal-content">
    {{> new-account}}
  </div>
</div>
<!-- Modal HTML for the sign in form -->
<div id="sign-in-modal" class="modal">
  <div class="modal-content">
    {{> login}}
  </div>
</div>
<!-- Model to reset password -->
<div id="password-reset-form" class="modal">
  <div class="modal-content">
    {{> password-reset-form}}
  </div>
</div>
</section>